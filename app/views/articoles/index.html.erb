<h1>Listing all articles</h1>

<p>
<%= link_to "Create new article", new_articole_path %>

</p>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>


	</tr>

	<% @articles.each do |article|%>

	<tr>
		<td>
			<%= article.title %>
		</td>

		<td>

		<%=article.description%>

		</td>

		<td>
			<%= link_to 'Edit', edit_articole_path(article) %>

		</td>
		<td>
			<%= link_to 'Show', articole_path(article)%>

		</td>

		<td><%=link_to 'Delete',articole_path(article),method: :delete, data: {confirm:"Are you sure?"}%></td>

	</tr>
	<%end%>



</table>